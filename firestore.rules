rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to retirement_plans collection for everyone
    match /retirement_plans/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // Allow read access to search_logs for analytics
    match /search_logs/{document=**} {
      allow read: if false;
      allow write: if true;
    }

    // Protect dol_sync_metadata
    match /dol_sync_metadata/{document=**} {
      allow read: if false;
      allow write: if false;
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}