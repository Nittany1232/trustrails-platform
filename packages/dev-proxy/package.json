{
  "name": "@trustrails/dev-proxy",
  "version": "1.0.0",
  "private": true,
  "description": "Development proxy server with service discovery for TrustRails platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "npm run build && node dist/index.js",
    "start": "node dist/index.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "node-fetch": "^3.3.2",
    "chalk": "^5.3.0",
    "portfinder": "^1.0.32",
    "ts-node": "^10.9.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}